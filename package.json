{
  "scripts": {
    "start": "yarn playground",
    "build": "yarn build:icons && lerna run build --scope @semcore/* --ignore @semcore/icon,@semcore/ui",
    "build:icons": "yarn workspace @semcore/icon build",
    "typecheck": "lerna exec --scope @semcore/* -- tsc --noEmit",
    "prebuild": "rm -rf semcore/**/lib && yarn prebuild:icon && yarn prebuild:illustration",
    "prebuild:icon": "yarn workspace @semcore/icon prebuild",
    "prebuild:illustration": "yarn workspace @semcore/illustration prebuild",
    "test": "jest --no-cache",
    "playground": "yarn workspace @semcore/playground start",
    "website": "yarn --cwd website start",
    "coverage": "jest --no-cache --coverage",
    "pub": "super-publisher --root ./semcore",
    "lint:es": "eslint -c .eslintrc --ext .ts,.tsx,.js,.jsx ./semcore",
    "lint:ts": "tsc --project tsconfig.json --noEmit",
    "lint": "yarn lint:ts && yarn lint:es",
    "prettier:fix": "pretty-quick --staged --ignore-path=./.prettierignore",
    "preinstall": "node ./.ci/update-workspaces-list",
    "publish:website": "tsm --require=./.ci/tsm-filter-warnings.js ./.ci/trigger-website-publish.ts",
    "prepare": "husky install"
  },
  "private": true,
  "workspace-sources": {
    "@semcore/*": [
      "semcore/*/src"
    ],
    "@semcore/utils/lib/*": [
      "semcore/utils/src/*"
    ]
  },
  "devDependencies": {
