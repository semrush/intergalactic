{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "lib",
      "dist",
      "**/code_mod/**",
      "**/node_modules/**",
      "semcore/icon/**/**/*.js",
      "semcore/icon/**/**/*.d.ts",
      "semcore/illustration/**/*.js",
      "semcore/illustration/**/*.d.ts",
      "**/__fixtures__/**",
      ".tmp",
      "**/*.mjs",
      "mailer",
      "./tools/icon-transform-svg/__tests__",
      "**/lcov-report/**",
      "website/ts.json",
      "website/docs/.vitepress/dist",
      "website/docs/.vitepress/cache",
      "./tools/entry-point/**/*.js",
      "./tools/entry-point/**/*.mjs",
      "./tools/entry-point/**/*.d.ts",
      "./tools/intg-release-migrator/tools/*.js",
      "./tools/playground/examples/**"
    ],
    "lineWidth": 100,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "jsxQuoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "lib",
      "dist",
      "**/code_mod/**",
      "**/node_modules/**",
      "semcore/icon/**/**/*.js",
      "semcore/icon/**/**/*.d.ts",
      "semcore/illustration/**/*.js",
      "semcore/illustration/**/*.d.ts",
      "**/__fixtures__/**",
      ".tmp",
      "**/*.mjs",
      "mailer",
      "./tools/icon-transform-svg/__tests__",
      "**/lcov-report/**",
      "website/ts.json",
      "website/docs/.vitepress/dist",
      "website/docs/.vitepress/cache",
      "website/tools/check-links.ts",
      "./tools/playground/examples/**",
      "./tools/entry-point/**/*.js",
      "./tools/entry-point/**/*.mjs",
      "./tools/entry-point/**/*.d.ts",
      "./tools/intg-release-migrator/tools/*.js"
    ],
    "rules": {
      "suspicious": {
        "noEmptyInterface": "off",
        "noExplicitAny": "off",
        "noPrototypeBuiltins": "off",
        "noRedeclare": "off",
        "noShadowRestrictedNames": "off",
        "noArrayIndexKey": "off",
        "noConsoleLog": "error"
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "useTemplate": "off",
        "useExponentiationOperator": "off"
      },
      "correctness": {
        "noChildrenProp": "off",
        "noUnreachableSuper": "off",
        "noConstructorReturn": "off"
      },
      "a11y": {
        "useAnchorContent": "off",
        "noSvgWithoutTitle": "off",
        "noNoninteractiveTabindex": "off"
      },
      "complexity": {
        "useFlatMap": "off",
        "useLiteralKeys": "off",
        "noBannedTypes": "off",
        "noUselessThisAlias": "off",
        "noStaticOnlyClass": "off",
        "noUselessFragments": "off",
        "noForEach": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  }
}
