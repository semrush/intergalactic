{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "es6", "es7"],
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "importHelpers": false,
    "noEmitHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "baseUrl": "./semcore",
    "plugins": [
      { "name": "typescript-workspace-plugin" },
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.shadow\\.css$"
        }
      }
    ],
    "typeRoots": ["types"]
  },
  "exclude": ["node_modules", "website", "website", "tools"]
}
