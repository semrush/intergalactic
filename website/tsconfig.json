{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "static/*": ["src/static/*"],
      "utils/*": ["src/utils/*"],
      "@semcore/*": ["../semcore/*"],
      "@semcore/ui/*": ["../semcore/*"],
      "@semcore/ui/utils/lib/*": ["../semcore/utils/src/*"]
    }
  },
  "include": ["src", "docs", "types", "algoliaConfig.ts"]
}
